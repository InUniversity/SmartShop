<Window x:Class="SmartShop.View.BuyerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Name="buyerWindow"
        WindowStartupLocation="CenterScreen"
        Title="BuyerWindow" Height="700" Width="1200">
    <materialDesign:DrawerHost>
        <materialDesign:DrawerHost.LeftDrawerContent>
            <Border CornerRadius="30" BorderThickness="1">
                <StackPanel Width="200">
                    <RadioButton
                        Height="50"
                        Margin="4"
                        Command="{Binding ShowBuyHistoryCommand}"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        Style="{StaticResource MaterialDesignTabRadioButtonRight}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountCircle" />
                            <TextBlock Text="Tôi" Margin="47 0" />
                        </StackPanel>
                    </RadioButton>

                    <RadioButton
                        Height="50"
                        Margin="4"
                        Command="{Binding ShowMyAccountCommand}"
                        BorderBrush="{DynamicResource PrimaryHueMidBrush}"
                        Style="{StaticResource MaterialDesignTabRadioButtonRight}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Briefcase" />
                            <TextBlock Text="Dự án" Margin="38 0" />
                        </StackPanel>
                    </RadioButton>
                </StackPanel>
            </Border>
        </materialDesign:DrawerHost.LeftDrawerContent>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="55" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Background="#006064" CornerRadius="16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Height="50"
                            Width="60"
                            ToolTip=" Nhà"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ShowProductsCommand}">
                            <materialDesign:PackIcon Kind="FormatListBulleted" Foreground="White" />
                        </Button>
                        <Button
                            Height="50"
                            Width="60"
                            ToolTip=" Nhà"
                            Style="{StaticResource MaterialDesignIconButton}"
                            Command="{Binding ElementName=buyerWindow, Path=DataContext.MoveToProductsViewCommand}">
                            <materialDesign:PackIcon Kind="HomeOutline" Foreground="White" />
                        </Button>
                    </StackPanel>

                    <Button
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Margin="10,0,10,0"
                        Height="50"
                        Width="60"
                        ToolTip="Giỏ hàng"
                        Style="{StaticResource MaterialDesignIconButton}"
                        Command="{Binding ElementName=buyerWindow, Path=DataContext.MoveToCartViewCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CartOutline" Foreground="White" />
                            <materialDesign:Badged
                                Badge="{Binding ElementName=buyerWindow, Path=DataContext.CartQuantity, UpdateSourceTrigger=PropertyChanged}"
                                Margin="10 0"
                                BadgeForeground="#f3e5f5"
                                BadgeBackground="#4a148c"
                                VerticalAlignment="Top" />
                        </StackPanel>
                    </Button>

                </Grid>
            </Border>
            <ContentControl Grid.Row="1" Content="{Binding ElementName=buyerWindow, Path=DataContext.CurrentChildView}" />
        </Grid>
    </materialDesign:DrawerHost>
</Window>