            </Grid>

            <Grid Grid.Column="1" Grid.Row="1">
                <StackPanel>
                    <TextBlock Text="Thông tin chi tiết" 
                               FontSize="24" 
                               FontWeight="SemiBold" 
                               Margin="10,50,0,50" 
                               Style="{StaticResource TitleTxtStyle}"/>
                    <Button Content="Thanh toán"
                            Command="{Binding PayCommand}"/>
