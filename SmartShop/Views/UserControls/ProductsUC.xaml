<UserControl x:Class="SmartShop.Views.UserControls.ProductsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SmartShop.Views.UserControls"
             mc:Ignorable="d" 
             Name="prodsUC"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer Grid.Column="1" Grid.Row="1" Background="#FFF1f1f1">
            <StackPanel>
                <StackPanel Margin="20 0" >
                    <ItemsControl ItemsSource="{Binding ElementName=prodsUC, Path=DataContext.prodsUC}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="10" Width="600" Height="150">
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="100" Height="100" CornerRadius="5" Margin="25,0,0,0" HorizontalAlignment="Left">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ImgUrl}"/>
                                            </Border.Background>
                                        </Border>
                                        <StackPanel Width="290" Height="100" Margin="25,0,0,0">
                                            <Border  CornerRadius="5" Width="290" Height="35" Margin="0,0,0,0" HorizontalAlignment="Left">
                                                <TextBlock Margin="5" FontSize="22" Text="{Binding Name,StringFormat={}{0:C}}" />
                                            </Border>
                                            <Border CornerRadius="5" Width="290" Height="35" Margin="0,30,0,0" HorizontalAlignment="Left">
                                                <TextBlock Margin="5" FontSize="22" Text="{Binding Price}" />
                                            </Border>
                                        </StackPanel>
                                        <Border Width="50" Height="50" CornerRadius="5" Margin="25,0,0,0">
                                            <TextBox  Margin="5" FontSize="22" VerticalAlignment="Center">

                                            </TextBox>
                                        </Border>
                                        <!-- <Border Width="60" Height="50"  Margin="25,0,0,0"> -->
                                            <!-- <Button Margin="5" BorderThickness="0" > -->
                                            <!--     <Button.Background  > -->
                                            <!--         <ImageBrush ImageSource="/Views/UserControls/add.jpg" TileMode="None"/> -->
                                            <!--     </Button.Background> -->

                                            <!-- </Button> -->
                                        <!-- </Border> -->
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
