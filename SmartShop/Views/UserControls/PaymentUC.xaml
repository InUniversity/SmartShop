<UserControl x:Class="SmartShop.Views.UserControls.PaymentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:SmartShop.Views.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Name="paymentUC"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <uc:UserAddressUC DataContext="{Binding ElementName=paymentUC, Path=DataContext.UserAddressVM}"
                              Margin="10,0,0,10" />
            <uc:OrderItemsUC DataContext="{Binding ElementName=paymentUC, Path=DataContext.OrderItemsVM}" 
                             Margin="10,0,0,10" Height="400"/>
            <Button Height="40" Width="300" Content="Thanh toán" Command="{Binding ElementName=paymentUC, Path=DataContext.PayCommand}"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}" />
        </StackPanel>
    </ScrollViewer>
</UserControl>